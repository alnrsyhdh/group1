<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC546D"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#CC546D"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:src="@drawable/shoes1"
                android:id="@+id/iv_promshoes1"
                android:layout_width="120dp"
                android:layout_height="180dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/tv_shoeproduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Cinder Gella"
                    android:fontFamily="serif"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    />


                <TextView
                    android:id="@+id/tv_shoecolour"
                    android:layout_margin="10dp"
                    android:text="Colour: rose gold"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_shoedetails"
                    android:layout_margin="8dp"
                    android:text="Details: heels with straps"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_shoesize"
                    android:layout_margin="8dp"
                    android:text="Available size : 5-9"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_shoeprice"
                    android:layout_margin="8dp"
                    android:text="Rent Price: RM 30 PER DAY"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>
