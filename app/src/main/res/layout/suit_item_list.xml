<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC546D"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#f4c2c3"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:src="@drawable/sprom1"
                android:id="@+id/iv_mprom1"
                android:layout_width="120dp"
                android:layout_height="180dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/tv_mproduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Notch Suit"
                    android:fontFamily="serif"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    />


                <TextView
                    android:id="@+id/tv_mcolour"
                    android:layout_margin="10dp"
                    android:text="Colour: midnight blue"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_mdetails"
                    android:layout_margin="8dp"
                    android:text="Details: fit cut with white shirt and bow"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_msize"
                    android:layout_margin="8dp"
                    android:text="Available size : S-XL"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_mprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="serif"
                    android:text="Rent Price: RM 250 PER DAY"
                    android:textColor="@color/black"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>
